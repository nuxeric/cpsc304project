<!DOCTYPE html>
<html>
<head>
  <%- include('../../layout/head.ejs') -%>
</head>
<body>
  <%- include('../../layout/header.ejs') -%>

  <main>
    <div class="hero">
      <h1><%= title %></h1>

      <table>
        <thead>
          <tr>
            <th>Serial Num</th>
            <th>Container ID</th>
            <th>Type Name</th>
            <th>Weight</th>
            <th>Manufacture Date</th>
          </tr>
        </thead>
        <tbody>
          <% if (inventoryList) {%>
          <% inventoryList.forEach(i => { %>
          <tr>
            <td><%= i.serial_num %></td>
            <td><%= i.container_id %></td>
            <td><%= i.type_name %></td>
            <td><%= i.weight %></td>
            <td><%= i.getDateString() %></td>
          </tr>
          <% }); %>
          <% } %>
        </tbody>
      </table>

      <p>This is the result of the following query:</p>
      <pre>
  SELECT *
  FROM inventory
  WHERE weight >= &lt;given minimum weight&gt; AND
        container_id = &lt;given container ID&gt;;</pre>
    </div>
  </main>

  <%- include('../../layout/foot.ejs') -%>
</body>
</html>
